@prefix dash: <http://datashapes.org/dash#> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix schema: <http://schema.org/> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix reproterms: <https://raw.githubusercontent.com/ReproNim/schema-standardization/master/terms/> .
@prefix skos: <http://www.w3.org/2004/02/skos/core#> .
@prefix reproschema: <https://raw.githubusercontent.com/ReproNim/schema-standardization/master/schemas/> .

reproschema:ActivityShape
    a sh:NodeShape ;
    sh:targetClass reproschema:Activity;
    sh:property [
        sh:path schema:description;
        sh:datatype rdf:langString ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:deactivated false ;
    ] ;
    sh:property [
        sh:path schema:schemaVersion;
        sh:datatype rdf:langString ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:deactivated false ;
    ] ;
    sh:property [
        sh:path schema:version ;
        sh:datatype rdf:langString ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:deactivated false ;
    ] ;
    sh:property [
        sh:path skos:prefLabel ;
        sh:datatype rdf:langString ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path reproterms:preamble;
        sh:datatype rdf:langString ;
        sh:maxCount 1 ;
        sh:deactivated false ;
    ] ;
    sh:property [
        sh:path skos:altLabel ;
        sh:datatype rdf:langString ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:deactivated false ;
    ] ;
    sh:property [
        sh:path schema:citation ;
        sh:datatype rdf:langString ;
        sh:deactivated false ;
    ] ;
    sh:property [
        sh:path reproterms:scoringLogic ;
        sh:maxCount 1 ;
        sh:node schema:ScoringShape ;
        sh:deactivated true ;
    ] ;
    sh:property [
        sh:path reproterms:variableMap;
        sh:datatype xsd:string ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:node reproterms:VariableMapShape ;
    ] ;
    sh:property [
        sh:path reproterms:ui ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:node reproterms:UiShape ;
    ] .

reproterms:UiShape
    a sh:NodeShape ;
    sh:property [
        sh:path reproterms:order ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:node reproterms:OrderShape ;
    ] ;
    sh:property [
        sh:path reproterms:shuffle ;
        sh:datatype schema:boolean ;
        sh:maxCount 1 ;
    ] ;
    sh:property [
        sh:path reproterms:visibility ;
        sh:minCount 1 ;
        sh:maxCount 1 ;
        sh:node reproterms:VisibilityShape ;
    ] .

reproterms:OrderShape
    a sh:NodeShape ;
    sh:targetClass reproterms:order ;
    sh:property [
        sh:path xsd:string ;
        sh:node dash:ListShape ;
        sh:property [
            sh:path ( [ sh:zeroOrMorePath rdf:rest ] rdf:first ) ;
            sh:datatype xsd:string ;
            sh:minLength 1 ;
            sh:minCount 1 ;
        ]
    ] .

schema:ScoringShape
    a sh:NodeShape ;
    sh:closed true ;
    sh:property [
        sh:path phq9:phq9_total_score ;
        sh:datatype xsd:string ;
        sh:maxCount 1 ;
    ] .


